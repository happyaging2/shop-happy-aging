{% if article != blank %}
  {% if is_article_hero %}
    <div class="site-container border-b pt-10 pb-5 d-grid grid-cols-1 lg:grid-cols-[1.5fr_1fr] lg:gap-x-20 lg:pt-8 lg:pb-8">
  {% else %}
    <a href="{{ article.url }}" class="group site-container border-b pt-10 pb-5 d-grid grid-cols-1 lg:grid-cols-[1.5fr_1fr] lg:gap-x-20 lg:pt-8 lg:pb-8">
  {% endif %}
    <div class="max-lg:mt-8 order-2 lg:order-1">
      <div class="relative pb-[67%] bg-beige">
        <img class="site-image" src="{{ article.image | img_url: '1600x' }}" loading="lazy" />
      </div>
    </div>
    <div class="order-1 text-center lg:text-left lg:my-auto lg:order-2">
      <span class="eyebrow">
        {{ article.tags | join: ' + ' }}
      </span>
      <h1 class="heading heading--1 mt-8 uppercase max-w-[80%] mx-auto md:max-w-[unset] lg:mx-[unset]">
        {% assign ital_meta = article.metafields.happy_aging.italicized_title_segment %}
        {% if ital_meta %}
          {% assign ital = '<br /><em class="lowercase">' | append: ital_meta | append: '</em>' %}
          {{ article.title | replace: ital_meta, ital }}
        {% else %}
          {{ article.title }}
        {% endif %}
      </h1>
      {% unless is_article_hero %}
        <div class="flex justify-center items-center gap-x-3.5 paragraph--2 lg:justify-start">
          <span>Read more</span>
          <span class="lg:group-hover:translate-x-2 transition-transform duration-300">{% render 'icon-read-arrow' %}</span>
        </div>
      {% endunless %}
    </div>
  {% if is_article_hero %}
    </div>
  {% else %}
    </a>
  {% endif %}
{% endif %}