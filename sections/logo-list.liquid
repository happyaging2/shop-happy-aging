<div class="border-t-[1px] sm:border-t-0 sm:min-h-[172px] sm:flex sm:items-center py-12 lg:pt-16">
  <div class="site-container">
    <div class="flex flex-wrap justify-center gap-10 lg:gap-20 xl:gap-12">
      {% for block in section.blocks %}
        {% if block.type == "logo_item" %}
          <div class="w-1/3 sm:w-[110px] lg:w-[120px] xl:w-[200px]">
            {{ block.settings.logo_img | image_url: height: 150 | image_tag: class: 'object-contain h-[30px] w-auto' }}
          </div>
        {% endif %}
      {% endfor %}
      </div>
  </div>
</div>

{% schema %}
{
  "name": "Logo Clouds",
  "tag": "section",
  "presets": [
    {
      "name": "Logo Clouds"
    }
  ],
  "blocks": [
    {
      "name": "Logo",
      "type": "logo_item",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo_img",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}