<div class="site-container pb-12 lg:pb-20">
  <div class="d-grid md:grid-cols-2 gap-6 lg:gap-16 items-start xl:px-32">
    {% for block in section.blocks %}
      <a href="{{ block.settings.link }}" class="group grid content-start grid-rows-[auto_auto_auto_1fr_auto]" target="_blank" rel="noopener noreferrer">
        {% unless block.settings.publication_logo == blank %}
          <img class="w-[96px]" src="{{ block.settings.publication_logo | img_url: '300x' }}" loading="lazy" />
        {% endunless %}
        <span class="block text-sm uppercase mt-6">{{ block.settings.publication_name }}</span>
        <h2 class="heading heading--2 mt-1.5 lg:mt-3">{{ block.settings.title }}</h2>
        <p class="mt-3 text-[13px] lg:text-sm">{{ block.settings.excerpt }}</p>
        <button class="button button--black w-full py-2 px-5 relative mt-6">Read article</button>
      </a>
    {% endfor %}
  </div>
</div>


{%  schema  %}
{
  "name": "Press List",
  "tag": "section",
  "settings": [],
  "blocks":[
    {
      "type": "press_item",
      "name": "Press Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }, {
          "type": "text",
          "id": "excerpt",
          "label": "Excerpt"
        }, {
          "type": "image_picker",
          "id": "publication_logo",
          "label": "Publication Logo"
        }, {
          "type": "text",
          "id": "publication_name",
          "label": "Publication Name"
        }, {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }


  ],
  "presets": [
    {
      "name": "Press List"
    }
  ]
}
{% endschema %}