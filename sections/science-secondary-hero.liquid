<div class="border-b border-black py-6 lg:pt-20 lg:pb-8">
  <div class="flex flex-col items-center w-full site-container">
    {% unless section.settings.eyebrow == blank %}
      <h2 class="sub-heading text-center mb-2 lg:mb-3">{{ section.settings.eyebrow }}</h2>
    {% endunless %}
    {% unless section.settings.title == blank %}
      <div class="font-heading-light text-4xl text-center max-w-[900px] leading-[38px] mb-10 lg:mb-16 lg:text-[50px] lg:leading-[50px]">
        {{ section.settings.title }}
      </div>
    {% endunless %}
    <div class="relative pb-[72%] lg:pb-[35%] overflow-hidden w-full bg-beige">
      {% unless section.settings.video_url == blank %}
        <site-video>
          <video
            {% unless section.settings.video_poster == blank %} poster="{{ section.settings.video_poster | img_url: '1920x' }}"{% endunless %}
            class="absolute w-full h-full object-cover object-center top-0 left-0"
            loop
            autoplay
            muted
            playsinline>
            <source data-src="{{ section.settings.video_url }}" type="video/mp4">
          </video>
        </site-video>
      {% endunless %}
      {% unless section.settings.image_desktop == blank %}
        <img class="hidden lg:block site-image" src="{{ section.settings.image_desktop | img_url: '2000x' }}" />
      {% endunless %}
      {% unless section.settings.image_mobile == blank %}
        <img class="lg:hidden site-image" src="{{ section.settings.image_mobile | img_url: '1000x' }}" />
      {% endunless %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Science Secondary Hero",
  "tag": "section",
  "presets": [
    {
      "name": "Science Secondary Hero"
    }
  ],
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow"
    }, {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    }, {
      "type": "text",
      "id": "video_url",
      "label": "Video URL (Mp4)"
    }, {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster"
    }, {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image Desktop"
    }, {
      "type": "image_picker",
      "id": "image_mobile",
      "label": "Image Mobile"
    }
  ]
}
{% endschema %}
