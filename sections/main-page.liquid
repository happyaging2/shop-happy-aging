    </svg>
    <h2 class="heading heading--1 mb-3 lg:mb-[10px] d-grid md:grid-flow-col lg:gap-3 uppercase">
      {% assign ital_meta = page.metafields['happy-aging'].italicized_title_segment %}
      {% if ital_meta %}
        {% assign ital = '<br /><em class="lowercase">' | append: ital_meta | append: '</em>' %}
        {{ page.title | replace: ital_meta, ital }}
      {% else %}
        {{ page.title }}
      {% endif %}
    </h2>
    {% unless page.metafields['happy-aging'].subcopy == blank %}
      <p class="max-w-[532px] text-sm">
        {{ page.metafields['happy-aging'].subcopy }}
      </p>
    {% endunless %}
  </section>
  {% unless page.content == blank %}
    <section class="px-4 pb-16 lg:pb-20">
      <div class="max-w-4xl mx-auto rte-page">
        {{ page.content }}
      </div>
      {% if request.path == '/pages/return-policy' %}
        <div class="d-grid md:justify-center mt-8 lg:mt-20">
          <a href="https://happyaging.loopreturns.com" class="button button--black">Start a Return</a>
        </div>
      {% endif %}
    </section>
  {% endunless %}
{% endif %}

{% schema %}
{
  "name": "t:sections.main-page.name"
}
{% endschema %}
