{% if template == 'page.track-order' %}
  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const heading = document.querySelector('.loop-heading');
      const submit = document.querySelector('.loop-order-tracking__submit');
      heading.innerText = 'Start a Return';
      submit.innerText = 'Start a Return';
    });
  </script>
{% else %}
