<section class="main-article px-4 mt-10 mb-[3.75rem] lg:mt-[5.625rem]">
  <div class="max-w-[80rem] mx-auto">
    <div class="main-article-content">
      {{ article.content }}
    </div>
    <div class="flex flex-col justify-center items-center gap-y-4 mt-[5.625rem] mb-[3.75rem] lg:flex-row lg:gap-x-2.5 lg:my-[7.5rem]">
      <a
        {% unless blog.previous_article == blank %}
          href="{{ blog.previous_article }}"
        {% endunless %}
        class="button button--black w-[16.375rem] {% if blog.previous_article == blank %}opacity-50 cursor-default{% endif %}"
        title="{{ blog.previous_article.handle }}"
      >
        Previous Article
      </a>
      <a
        {% unless blog.next_article == blank %}
          href="{{ blog.next_article }}"
        {% endunless %}
        class="button button--black w-[16.375rem] {% if blog.next_article == blank %}opacity-50 cursor-default{% endif %}"
        title="{{ blog.next_article.handle }}"
      >
        Next Article
      </a>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Main Article",
  "tag": "section",
  "presets": [
    {
      "name": "Main Article"
    }
  ],
  "settings": []
}
{% endschema %}
