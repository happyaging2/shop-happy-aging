{% comment %} Simplified Hero Section: desktop/mobile images with alt text and clickable banner {% endcomment %}
<div class="relative w-full h-screen overflow-hidden" {% unless section.settings.bg_color == blank %}style="background: {{ section.settings.bg_color }}"{% endunless %}>
  {% if section.settings.banner_link != blank %}
    <a href="{{ section.settings.banner_link }}" class="absolute inset-0 block" target="_self" rel="noopener noreferrer">
  {% endif %}

  <!-- Desktop Image -->
  {% unless section.settings.image_desktop == blank %}
    <img
      src="{{ section.settings.image_desktop | image_url: width: 2048 }}"
      alt="Hero banner desktop"
      class="hidden lg:block w-full h-full object-cover"
      loading="eager"
    />
  {% endunless %}

  <!-- Mobile Image -->
  {% unless section.settings.image_mobile == blank %}
    <img
      src="{{ section.settings.image_mobile | image_url: width: 800 }}"
      alt="Hero banner mobile"
      class="block lg:hidden w-full h-full object-cover"
      loading="eager"
    />
  {% endunless %}

  {% if section.settings.banner_link != blank %}</a>{% endif %}

  <!-- Overlay content -->
  <div class="relative z-10 flex items-center justify-center h-full px-4 lg:pl-16">
    <div class="text-center lg:text-left max-w-xl mx-auto lg:mx-0 text-{{ section.settings.text_color | default: 'white' }}">
      {% unless section.settings.sub_heading == blank %}
        <p class="sub-heading mb-2">{{ section.settings.sub_heading }}</p>
      {% endunless %}
      {% unless section.settings.title == blank %}
        <h1 class="heading mb-4">{{ section.settings.title }}</h1>
      {% endunless %}
      {% unless section.settings.text == blank %}
        <p class="paragraph mb-6">{{ section.settings.text }}</p>
      {% endunless %}
      {% if section.settings.cta_link != blank and section.settings.cta_text != blank %}
        <a href="{{ section.settings.cta_link }}" class="button {% if section.settings.button_color == 'cream' %}button--cream{% else %}button--black{% endif %}">{{ section.settings.cta_text }}</a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    { "type": "color", "id": "bg_color", "label": "Background Color" },
    { "type": "url",   "id": "banner_link", "label": "Banner Link (optional)" },
    { "type": "image_picker", "id": "image_desktop", "label": "Desktop Image" },
    { "type": "image_picker", "id": "image_mobile",  "label": "Mobile Image" },
    { "type": "select", "id": "text_color", "label": "Text Color", "options": [
        {"value":"white","label":"White"},
        {"value":"black","label":"Black"}
    ]},
    { "type": "text",   "id": "sub_heading","label":"Sub-Heading"},
    { "type": "richtext","id": "title","label":"Title"},
    { "type": "richtext","id": "text","label":"Text"},
    { "type": "url",   "id": "cta_link","label":"CTA Link"},
    { "type": "text",  "id": "cta_text","label":"CTA Text"},
    { "type": "select","id": "button_color","label":"Button Color","options":[
        {"value":"black","label":"Black"},
        {"value":"cream","label":"Cream"}
    ]}
  ],
  "presets": [{"name":"Hero"}]
}
{% endschema %}
