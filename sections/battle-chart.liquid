<div class="border-t border-black py-16 lg:py-20">
  <div class="site-container">
    <div class="d-grid lg:grid-cols-[1fr_1.4fr] gap-4 lg:gap-12 xl:gap-24">
      <div>
        <div class="border h-full d-grid grid-rows-[1fr_auto]">
          <div class="border-b border-black bg-beige w-full py-3 pl-4 lg:pl-6 lg:pl-6 lg:py-6 d-grid grid-cols-[1fr_64px_64px] lg:grid-cols-[1fr_72px_72px] items-end">
            <h2 class="heading heading--2 max-w-[150px] lg:max-w-[410px]">{{ section.settings.title }}</h2>
            <div class="text-center">
              <svg class="mx-auto" width="36" viewBox="0 0 73 35" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M48.1962 22.6069L53.9532 8.00806L55.3553 4.05552L55.674 4.05552L56.9911 7.92305L60.7724 17.8469C56.5875 20.0357 52.4025 21.6294 48.1962 22.6282M64.4901 17.8044C65.7435 17.0819 66.9756 16.2956 68.2077 15.4669C69.5885 14.5531 72.6264 12.9168 72.6264 12.9168L70.9056 10.6643C70.9056 10.6643 68.5689 13.0656 67.2305 13.9581C66.1046 14.7231 64.9574 15.4244 63.8315 16.1044L57.9258 0.697988L54.8455 0.697989L45.9232 23.0957C43.1403 23.6057 40.3573 23.8607 37.5957 23.8395L37.5957 3.22677L37.7444 0.719242L33.6868 0.719243L33.8356 3.22677L33.8356 23.6482C27.5262 23.0532 21.1531 21.0982 14.7588 17.8044L14.7588 3.22677L14.9287 0.719246L10.85 0.719247L11.0199 3.22677L11.0199 15.7219C9.02302 14.5319 7.00488 13.1931 4.98674 11.7268C4.07326 11.0681 2.58621 9.24058 2.58621 9.24058L0.886721 11.4081C0.886721 11.4081 3.07481 12.5131 4.03077 13.2144C6.36757 14.9144 8.70437 16.4231 11.0199 17.7619L11.0199 31.3195L10.85 34.3796L14.9287 34.3796L14.7588 31.3195L14.7588 19.7807C21.1531 22.9682 27.5262 24.8595 33.8356 25.4332L33.8356 31.3195L33.6869 34.3795L37.7444 34.3795L37.5957 31.3195L37.5957 25.6245C37.5957 25.6245 37.7869 25.6245 37.8718 25.6245C40.2936 25.6245 42.7154 25.412 45.1584 25.0295L42.6516 31.3195L41.3558 34.3795L43.8201 34.3795L44.776 31.3195L47.4102 24.6257C52.0838 23.6482 56.7574 21.9269 61.4098 19.5257L65.9134 31.3408L66.8269 34.4008L71.0544 34.4008L69.6948 31.3408L64.5113 17.8256L64.4901 17.8044Z" fill="currentColor"></path>
              </svg>
            </div>
            <div class="text-center text-sm">
              others
            </div>
          </div>
          <div>
            {% for block in section.blocks %}
              {% assign mod = forloop.index | modulo: 2 %}
              <div class="{% unless forloop.last %}border-b{% endunless %} border-black pl-4 lg:pl-6 {% if mod == 0 %}bg-beige{% endif %}">
                <div class="w-full d-grid grid-cols-[1fr_64px_64px] lg:grid-cols-[1fr_72px_72px] items-center">
                  <p class="text-xs leading-5 pr-4 lg:pr-8 py-2 lg:py-3">{{ block.settings.title }}</p>
                  <div class="text-center text-sm border-l border-black py-2 lg:py-3 h-full d-grid items-center">
                    <svg class="mx-auto" width="20" height="20" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <circle cx="10.353" cy="10.315" r="8.954" stroke="#000"/>
                      <path d="m5.626 11.26 2.836 2.837M8.462 13.442l6.909-6.908" stroke="#000"/>
                    </svg>
                  </div>
                  <div class="text-center text-sm border-l border-black py-2 lg:py-3 h-full d-grid items-center">
                    {% if block.settings.others_have == true %}
                      <svg class="mx-auto" width="20" height="20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="10.353" cy="10.315" r="8.954" stroke="#000"/>
                        <path d="m5.626 11.26 2.836 2.837M8.462 13.442l6.909-6.908" stroke="#000"/>
                      </svg>
                    {% else %}
                      <svg class="mx-auto" width="20" height="20" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="10.202" cy="10.315" r="8.954" stroke="#000"/>
                        <path d="m6.748 6.86 6.908 6.91M6.748 13.77l6.908-6.91" stroke="#000"/>
                      </svg>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div>
        <div class="aspect-[1.4] relative bg-beige">
          {% unless section.settings.image == blank %}
            <img class="absolute top-0 left-0 w-full h-full object-cover object-center" src="{{ section.settings.image | img_url: '1000x' }}" loading="lazy" />
          {% endunless %}
        </div>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Battle Chart",
  "tag": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title"
    }, {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "blocks": [
    {
      "type": "chart_item",
      "name": "Chart Item",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }, {
          "type": "checkbox",
          "id": "others_have",
          "label": "Others Have?"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Battle Chart"
    }
  ]
}
{% endschema %}
