<section class="bg-beige px-4 pt-6 md:pt-11 pb-[60px] md:pb-[55px] lg:px-8">
  <div class="d-grid grid-cols-2 md:grid-cols-4 grid-rows-2 md:grid-rows-1 gap-[10px] mx-auto w-full max-w-[1074px]">
    <div class="relative pb-[137%] md:pb-[134%] bg-cream">
      {% unless section.settings.image_1 == blank %}
        <img class="site-image" src="{{ section.settings.image_1 | img_url: '1000x' }}" loading="lazy" />
      {% endunless %}
    </div>
    <div class="relative pb-[137%] md:pb-[134%] bg-cream">
      {% unless section.settings.image_1 == blank %}
        <img class="site-image" src="{{ section.settings.image_2 | img_url: '1000x' }}" loading="lazy" />
      {% endunless %}
    </div>
    <div class="relative pb-[137%] md:pb-[134%] bg-cream">
      {% unless section.settings.image_1 == blank %}
        <img class="site-image" src="{{ section.settings.image_3 | img_url: '1000x' }}" loading="lazy" />
      {% endunless %}
    </div>
    <div class="relative pb-[137%] md:pb-[134%] bg-cream">
      {% unless section.settings.image_1 == blank %}
        <img class="site-image" src="{{ section.settings.image_4 | img_url: '1000x' }}" loading="lazy" />
      {% endunless %}
    </div>
  </div>

  <div class="d-grid justify-center items-center text-center mt-10 text-center">
    {% unless section.settings.title == blank %}
      <h2 class="heading heading--1 em-breakline-xs mb-5">
        {{ section.settings.title }}
      </h2>
    {% endunless %}
    {% unless section.settings.description == blank %}
      <div class="paragraph paragraph--2 mb-10 max-w-[598px]">
        {{ section.settings.description }}
      </div>
    {% endunless %}
    {% unless section.settings.cta_text == blank or section.settings.cta_link == blank %}
      <div class="mx-auto">
        <a href="{{ section.settings.cta_link }}" title="{{ section.settings.cta_text }}">
          <button class="button button--black button--full-width">{{ section.settings.cta_text }}</button>
        </a>
      </div>
    {% endunless %}
  </div>

</section>

{% schema %}
  {
    "name": "Join Us",
    "presets": [
      {
        "name": "Join Us"
      }
    ],
    "settings": [
      {
        "type": "image_picker",
        "id": "image_1",
        "label": "Image 1"
      }, {
        "type": "image_picker",
        "id": "image_2",
        "label": "Image 2"
      }, {
        "type": "image_picker",
        "id": "image_3",
        "label": "Image 3"
      }, {
        "type": "image_picker",
        "id": "image_4",
        "label": "Image 4"
      }, {
        "type": "inline_richtext",
        "id": "title",
        "label": "Title"
      }, {
        "type": "text",
        "id": "description",
        "label": "Description"
      }, {
        "type": "text",
        "id": "cta_text",
        "label": "CTA Text"
      }, {
        "type": "url",
        "id": "cta_link",
        "label": "CTA Link"
      }
    ]
  }
{% endschema %}