{% doc %}
  @prompt
    Transform the product categories into clickable image circles on the mobile home page.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .category-circles-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: {{ block.settings.padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .category-circles__heading-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 20px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 600;
  }

  .category-circles__container-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: nowrap;
    overflow-x: auto;
    padding: 10px 15px;
    gap: {{ block.settings.gap }}px;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .category-circles__container-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .category-circle-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    flex: 0 0 auto;
    width: {{ block.settings.circle_size }}px;
  }

  .category-circle__image-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.circle_size }}px;
    height: {{ block.settings.circle_size }}px;
    border-radius: 50%;
    overflow: hidden;
    margin-bottom: 8px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    background-color: {{ block.settings.circle_background }};
  }

  .category-circle__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .category-circle__placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .category-circle__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
  }

  .category-circle__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    text-align: center;
    margin: 0;
    max-width: {{ block.settings.circle_size }}px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media screen and (min-width: 750px) {
    .category-circles__container-{{ ai_gen_id }} {
      justify-content: center;
      flex-wrap: wrap;
      overflow-x: visible;
    }
    
    .category-circle-{{ ai_gen_id }} {
      margin-bottom: 20px;
    }
  }
{% endstyle %}

<div class="category-circles-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h2 class="category-circles__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
  {% endif %}
  
  <div class="category-circles__container-{{ ai_gen_id }}">
    {% for i in (1..6) %}
      {% assign collection_setting = 'collection_' | append: i %}
      {% assign title_setting = 'title_' | append: i %}
      {% assign collection = block.settings[collection_setting] %}
      {% assign custom_title = block.settings[title_setting] %}
      
      {% if collection != blank %}
        <a href="{{ collection.url }}" class="category-circle-{{ ai_gen_id }}">
          <div class="category-circle__image-wrapper-{{ ai_gen_id }}">
            {% if collection.image %}
              <img 
                src="{{ collection.image | img_url: '200x200', crop: 'center' }}" 
                alt="{{ collection.title | escape }}" 
                class="category-circle__image-{{ ai_gen_id }}"
                width="200"
                height="200"
                loading="lazy"
              >
            {% else %}
              <div class="category-circle__placeholder-{{ ai_gen_id }}">
                {{ 'collection-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
          <p class="category-circle__title-{{ ai_gen_id }}">
            {% if custom_title != blank %}
              {{ custom_title }}
            {% else %}
              {{ collection.title }}
            {% endif %}
          </p>
        </a>
      {% endif %}
    {% endfor %}
  </div>
</div>

