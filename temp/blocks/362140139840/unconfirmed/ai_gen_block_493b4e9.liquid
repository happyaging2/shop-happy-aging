{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-circles-{{ ai_gen_id }} {
    width: 100%;
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    padding: 20px 0;
    margin-bottom: 10px;
  }

  .ai-category-circles-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-category-circles-container-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.spacing }}px;
    padding: 0 {{ block.settings.spacing }}px;
  }

  .ai-category-circle-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    min-width: {{ block.settings.circle_size }}px;
  }

  .ai-category-circle-image-{{ ai_gen_id }} {
    width: {{ block.settings.circle_size }}px;
    height: {{ block.settings.circle_size }}px;
    border-radius: 50%;
    overflow: hidden;
    background-color: {{ block.settings.circle_bg_color }};
    display: flex;
    justify-content: center;
    align-items: center;
    margin-bottom: 8px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    transition: transform 0.2s ease;
  }

  .ai-category-circle-item-{{ ai_gen_id }}:hover .ai-category-circle-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-category-circle-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-category-circle-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-category-circle-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.7;
  }

  .ai-category-circle-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    text-align: center;
    color: {{ block.settings.text_color }};
    margin: 0;
    max-width: {{ block.settings.circle_size }}px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media screen and (min-width: 750px) {
    .ai-category-circles-{{ ai_gen_id }} {
      {% if block.settings.hide_on_desktop %}
        display: none;
      {% else %}
        overflow-x: visible;
      {% endif %}
    }
    
    {% unless block.settings.hide_on_desktop %}
      .ai-category-circles-container-{{ ai_gen_id }} {
        flex-wrap: wrap;
        justify-content: center;
      }
      
      .ai-category-circle-item-{{ ai_gen_id }} {
        margin-bottom: 20px;
      }
    {% endunless %}
  }
{% endstyle %}

<div class="ai-category-circles-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-circles-container-{{ ai_gen_id }}">
    {% for collection in block.settings.collections %}
      <a href="{{ collection.url }}" class="ai-category-circle-item-{{ ai_gen_id }}">
        <div class="ai-category-circle-image-{{ ai_gen_id }}">
          {% if collection.image %}
            <img 
              src="{{ collection.image | image_url: width: block.settings.circle_size }}" 
              alt="{{ collection.title | escape }}"
              width="{{ block.settings.circle_size }}"
              height="{{ block.settings.circle_size }}"
              loading="lazy"
            >
          {% else %}
            <div class="ai-category-circle-placeholder-{{ ai_gen_id }}">
              {{ 'collection-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
        </div>
        <p class="ai-category-circle-title-{{ ai_gen_id }}">{{ collection.title }}</p>
      </a>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Mobile Category Circles",
  "tag": null,
  "class": "section",
  "settings": [
    {
      "type": "collection_list",
      "id": "collections",
      "label": "Collections",
      "limit": 12
    },
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "checkbox",
      "id": "hide_on_desktop",
      "label": "Hide on desktop",
      "default": true,
      "info": "Show only on mobile devices"
    },
    {
      "type": "header",
      "content": "Circle Style"
    },
    {
      "type": "range",
      "id": "circle_size",
      "min": 60,
      "max": 120,
      "step": 5,
      "unit": "px",
      "label": "Circle size",
      "default": 80
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 10,
      "max": 30,
      "step": 2,
      "unit": "px",
      "label": "Spacing between circles",
      "default": 16
    },
    {
      "type": "range",
      "id": "border_width",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "Border width",
      "default": 1
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#e5e5e5"
    },
    {
      "type": "color",
      "id": "circle_bg_color",
      "label": "Circle background color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Text Style"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 10,
      "max": 18,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 14
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#121212"
    }
  ],
  "presets": [
    {
      "name": "Mobile Category Circles"
    }
  ]
}
{% endschema %}