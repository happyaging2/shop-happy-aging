  @prompt
    Create a visually stunning comparison section for the Happy Aging Longevity Shots product page that maintains design consistency with the existing website while highlighting our competitive advantages. The section should be conversion-focused and build trust through clear differentiation., Deixe a tabela menor em largura e altura
    

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .product-comparison-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .product-comparison__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.table_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-comparison__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 30px;
  }

  .product-comparison__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    margin-bottom: 12px;
    color: {{ block.settings.heading_color }};
  }

  .product-comparison__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    max-width: 800px;
    margin: 0 auto 20px;
  }

  .product-comparison__table-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
    gap: 10px;
    margin-bottom: 25px;
  }

  .product-comparison__row-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
  }

  .product-comparison__row-{{ ai_gen_id }}--header {
    margin-bottom: 5px;
  }

  .product-comparison__cell-{{ ai_gen_id }} {
    padding: {{ block.settings.cell_padding }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: {{ block.settings.cell_height }}px;
    font-size: {{ block.settings.text_size }}px;
  }

  .product-comparison__cell-{{ ai_gen_id }}--feature {
    background-color: {{ block.settings.feature_bg_color }};
    color: {{ block.settings.feature_text_color }};
    font-weight: 500;
    justify-content: flex-start;
    text-align: left;
    align-items: flex-start;
  }

  .product-comparison__cell-{{ ai_gen_id }}--us {
    background-color: {{ block.settings.us_bg_color }};
    color: {{ block.settings.us_text_color }};
    font-weight: 500;
  }

  .product-comparison__cell-{{ ai_gen_id }}--them {
    background-color: {{ block.settings.them_bg_color }};
    color: {{ block.settings.them_text_color }};
  }

  .product-comparison__header-cell-{{ ai_gen_id }} {
    font-weight: 600;
    font-size: {{ block.settings.table_header_size }}px;
    padding: {{ block.settings.cell_padding }}px;
  }

  .product-comparison__check-{{ ai_gen_id }} {
    color: {{ block.settings.check_color }};
    font-size: 20px;
  }

  .product-comparison__x-{{ ai_gen_id }} {
    color: {{ block.settings.x_color }};
    font-size: 20px;
  }

  .product-comparison__highlight-{{ ai_gen_id }} {
    font-weight: 700;
    color: {{ block.settings.highlight_color }};
  }

  .product-comparison__cta-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 30px;
  }

  .product-comparison__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 25px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    font-weight: 600;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
  }

  .product-comparison__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .product-comparison__image-{{ ai_gen_id }} {
    max-width: 60px;
    height: auto;
    margin-bottom: 10px;
  }

  .product-comparison__image-container-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 10px;
  }

  .product-comparison__image-container-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .product-comparison__row-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .product-comparison__cell-{{ ai_gen_id }}--feature {
      background-color: {{ block.settings.feature_bg_color }};
      font-weight: 600;
      font-size: 14px;
    }

    .product-comparison__header-cell-{{ ai_gen_id }} {
      text-align: center;
    }

    .product-comparison__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .product-comparison__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="product-comparison-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="product-comparison__container-{{ ai_gen_id }}">
    <div class="product-comparison__header-{{ ai_gen_id }}">
      <h2 class="product-comparison__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      <div class="product-comparison__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
    </div>

    <div class="product-comparison__table-{{ ai_gen_id }}">
      <div class="product-comparison__row-{{ ai_gen_id }} product-comparison__row-{{ ai_gen_id }}--header">
        <div class="product-comparison__cell-{{ ai_gen_id }} product-comparison__header-cell-{{ ai_gen_id }} product-comparison__cell-{{ ai_gen_id }}--feature">
          {{ block.settings.feature_header }}
        </div>
        <div class="product-comparison__cell-{{ ai_gen_id }} product-comparison__header-cell-{{ ai_gen_id }} product-comparison__cell-{{ ai_gen_id }}--us">
          {% if block.settings.our_product_image %}
            <img 
              src="{{ block.settings.our_product_image | img_url: '120x' }}" 
              alt="{{ block.settings.our_product_title }}"
              class="product-comparison__image-{{ ai_gen_id }}"
              width="60"
              height="60"
              loading="lazy"
            >
          {% else %}
            <div class="product-comparison__image-container-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
          {{ block.settings.our_product_title }}
        </div>
        <div class="product-comparison__cell-{{ ai_gen_id }} product-comparison__header-cell-{{ ai_gen_id }} product-comparison__cell-{{ ai_gen_id }}--them">
          {% if block.settings.competitor_image %}
            <img 
              src="{{ block.settings.competitor_image | img_url: '120x' }}" 
              alt="{{ block.settings.competitor_title }}"
              class="product-comparison__image-{{ ai_gen_id }}"
              width="60"
              height="60"
              loading="lazy"
            >
          {% else %}
            <div class="product-comparison__image-container-{{ ai_gen_id }}">
              {{ 'product-apparel-1' | placeholder_svg_tag }}
            </div>
          {% endif %}
          {{ block.settings.competitor_title }}
        </div>
      </div>

      {% for i in (1..5) %}
        {% assign feature_key = 'feature_' | append: i %}
        {% assign our_value_key = 'our_value_' | append: i %}
        {% assign competitor_value_key = 'competitor_value_' | append: i %}
        {% assign feature = block.settings[feature_key] %}
        {% assign our_value = block.settings[our_value_key] %}
        {% assign competitor_value = block.settings[competitor_value_key] %}

        {% if feature != blank %}
          <div class="product-comparison__row-{{ ai_gen_id }}">
            <div class="product-comparison__cell-{{ ai_gen_id }} product-comparison__cell-{{ ai_gen_id }}--feature">
              {{ feature }}
            </div>
            <div class="product-comparison__cell-{{ ai_gen_id }} product-comparison__cell-{{ ai_gen_id }}--us">
              {% if our_value == 'check' %}
                <span class="product-comparison__check-{{ ai_gen_id }}">✓</span>
              {% elsif our_value == 'x' %}
                <span class="product-comparison__x-{{ ai_gen_id }}">✗</span>
              {% else %}
                {{ our_value }}
              {% endif %}
            </div>
            <div class="product-comparison__cell-{{ ai_gen_id }} product-comparison__cell-{{ ai_gen_id }}--them">
              {% if competitor_value == 'check' %}
                <span class="product-comparison__check-{{ ai_gen_id }}">✓</span>
              {% elsif competitor_value == 'x' %}
                <span class="product-comparison__x-{{ ai_gen_id }}">✗</span>
              {% else %}
                {{ competitor_value }}
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_cta %}
      <div class="product-comparison__cta-{{ ai_gen_id }}">
        <a href="{{ block.settings.button_link }}" class="product-comparison__button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

