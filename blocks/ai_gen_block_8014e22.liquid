{% doc %}
  @prompt
    highlight text: Happy Aging’s liposomal formulas deliver nutrients up to 10× better absorbed than regular capsules, giving you superior quality and results you can feel

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .highlight-text-container-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    margin: {{ block.settings.margin }}px 0;
    max-width: 100%;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};position: relative;
    overflow: hidden;
  }

  .highlight-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.font_size }}px;
    line-height: 1.5;
    font-weight: {{ block.settings.font_weight }};
    color: {{ block.settings.text_color }};
    text-align: {{ block.settings.text_alignment }};
    position: relative;
    z-index: 2;
  }

  .highlight-text-{{ ai_gen_id }} strong {
    color: {{ block.settings.accent_color }};
    font-weight:700;
  }

  {% if block.settings.show_accent_mark %}
    .highlight-accent-mark-{{ ai_gen_id }} {
      position: absolute;
      {% if block.settings.accent_mark_position == 'left' %}
        left: 0;
        top: 0;bottom: 0;
        width: {{ block.settings.accent_mark_width }}px;
      {% elsif block.settings.accent_mark_position == 'top' %}
        top: 0;
        left: 0;
        right: 0;
        height: {{ block.settings.accent_mark_width }}px;
      {% endif %}
      background-color: {{ block.settings.accent_mark_color }};
      z-index: 1;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .highlight-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
    .highlight-text-container-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px;
    }
  }
{% endstyle %}

<div class="highlight-text-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_accent_mark %}
    <div class="highlight-accent-mark-{{ ai_gen_id }}"></div>
  {% endif %}
  
  <div class="highlight-text-{{ ai_gen_id }}">
    {{ block.settings.highlight_text }}
  </div>
</div>

