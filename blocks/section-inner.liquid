{% stylesheet %}
  .section-grid > .section-grid {
    height: 100%;
  }
{% endstylesheet %}
{% style %}
  #shopify-block-{{ block.id }}.section-grid {
    {% if block.settings.mobile_max_width > 0 %}
      max-width: {{ block.settings.mobile_max_width }}px;
    {% endif %}
    display: grid;
    grid-template-columns: repeat({{ block.settings.mobile_grid_columns }}, 1fr);
    column-gap: {{ block.settings.mobile_grid_column_gap }}px;
    row-gap: {{ block.settings.mobile_grid_row_gap }}px;
    padding: {{ block.settings.top_spacing_mobile }}px {{ block.settings.right_spacing_mobile }}px {{ block.settings.bottom_spacing_mobile }}px {{ block.settings.left_spacing_mobile }}px;
    justify-items: {{ block.settings.mobile_horizontal_alignment }};
    align-items: {{ block.settings.mobile_vertical_alignment }};
  }
  @media (min-width: 1200px) {

    #shopify-block-{{ block.id }}.section-grid {
      {% if block.settings.desktop_max_width > 0 %}
        max-width: {{ block.settings.desktop_max_width }}px;
      {% else %}
        max-width: unset;
      {% endif %}
      {% if block.settings.desktop_grid_columns contains 'px' or block.settings.desktop_grid_columns contains 'auto' %}
        grid-template-columns: {{ block.settings.desktop_grid_columns }};
      {% else %}
        grid-template-columns: repeat({{ block.settings.desktop_grid_columns }}, 1fr);
      {% endif %}
      column-gap: {{ block.settings.desktop_grid_column_gap }}px;
      row-gap: {{ block.settings.desktop_grid_row_gap }}px;
      padding: {{ block.settings.top_spacing_desktop }}px {{ block.settings.right_spacing_desktop }}px {{ block.settings.bottom_spacing_desktop }}px {{ block.settings.left_spacing_desktop }}px;
      justify-items: {{ block.settings.horizontal_alignment }};
      align-items: {{ block.settings.vertical_alignment }};
    }

    #shopify-block-{{ block.id }}.section-grid {
      {% if block.settings.vertical_alignment == 'flex-between' %}
        display: flex!important;
        flex-direction: column!important;
        flex-wrap: nowrap!important;
        justify-content: space-between!important;
      {% endif %}
    }
    
    
  }
{% endstyle %}

{% content_for 'blocks' %}


