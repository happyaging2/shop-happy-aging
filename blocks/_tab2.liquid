<button class="js-tab-button tab-button {% if block.settings.is_active %}is-active{% endif %}" data-tab-button="{{ block.id }}">
  {{ block.settings.heading }}
</button>
<div class="js-tab-content hidden">
  {% content_for 'blocks' %}
</div>

{% schema %}
{
  "name": "Tab v2",
  "class": "tab-block",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tab heading"
    },
    {
      "type": "checkbox",
      "id": "is_active",
      "label": "Is active",
      "default": false
    }
  ],

  "presets": [
    {
      "name": "Tab v2",
      "settings": {
        "heading": "Tab heading"
      }
    }
  ]
}
{% endschema %}