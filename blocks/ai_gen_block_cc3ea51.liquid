{% doc %}
  @prompt
    HIGHLITH TEXT: DLS-verified size distribution ensures product-wide uniformity and the high encapsulation efficiency (> 90 %) that sets Happy Aging liposomes apart.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-highlight-text-{{ ai_gen_id }} {
    display: block;
    padding: {{ block.settings.padding }}px;
    margin: {{ block.settings.margin }}px 0;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    max-width: 100%;
  }

  .ai-highlight-text__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: 1.5;
    font-weight: {{ block.settings.font_weight }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-highlight-text__content-{{ ai_gen_id }} strong {
    color: {{ block.settings.highlight_color }};
    font-weight:700;
  }

  @media screen and (max-width: 749px) {
    .ai-highlight-text__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size_mobile }}px;
    }
  }
{% endstyle %}

<div class="ai-highlight-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-highlight-text__content-{{ ai_gen_id }}">
    DLS-verified size distribution ensures product-wide uniformity and the <strong>high encapsulation efficiency (> 90 %)</strong> that sets Happy Aging liposomes apart.
  </div>
</div>

