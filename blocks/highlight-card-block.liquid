{% style %}
  .grid-block > .highlight-card {
    height: 100%;
  }
  .highlight-card {
    border-top: 1px solid currentColor;
    padding-top: 20px;
    height: 100%;
  }
  .highlight-card__title {
    font-size: 30px;
    line-height: 1.2;
    font-family: var(--font-heading-family);
  }
  .highlight-card__text {
    margin-top: 10px;
    font-size: 14px;
    line-height: 20px;
  }
  .highlight-card__image-wrapper {
    margin-top: 20px;
    position: relative;
    padding-top: 100%;
  }
  .highlight-card__image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media (min-width: 1200px) {
    .highlight-card {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }
    .highlight-card__icon {
      margin-bottom: 0;
    }
    .highlight-card__text {
      max-width: 90%;
      margin-bottom: auto;
    }
  }
{% endstyle %}


{% if block.settings.title != blank %}
  <div class="highlight-card__title">{{ block.settings.title }}</div>
{% endif %}
{% if block.settings.text != blank %}
  <div class="highlight-card__text">{{ block.settings.text }}</div>
{% endif %}
{% if block.settings.image != blank %}
  <div class="highlight-card__image-wrapper">
    {{ block.settings.image | image_url: width: 1000 | image_tag: class: 'highlight-card__image' }}
  </div>
{% endif %}
{% schema %}
{
  "name": "Highlight card",
  "class": "highlight-card",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    }
  ],
  "presets": [
    {
      "name": "Highlight card"
    }
  ]
}
{% endschema %}
