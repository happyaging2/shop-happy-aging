<div class="accordion js-accordion {% if block.settings.is_active %}is-active{% endif %}">
  <button class="js-accordion-button accordion-button ">
    {{ block.settings.heading }}
    <svg xmlns="http://www.w3.org/2000/svg" width="35" height="35" viewBox="0 0 25 25" fill="none">
      <circle cx="12.0683" cy="12.0683" r="11.8145" fill="none" stroke="black" stroke-width="0.507665"/>
      <path d="M5.55127 11.335L10.2187 16.0025L18.0865 8.13477" stroke="black" stroke-width="0.507665"/>
    </svg>
  </button>
  <div class="js-accordion-content accordion-content">
    <div class="accordion-content__inner">{{ block.settings.content }}</div>
    {% content_for 'blocks' %}
  </div>
</div>

{% schema %}
{
  "name": "Accordion",
  "class": "accordion-block",
  "blocks": [{ "type": "@theme" }],
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Accordion heading"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
    },
    {
      "type": "checkbox",
      "id": "is_active",
      "label": "Is active",
      "default": false
    }
  ],

  "presets": [
    {
      "name": "Accordion",
      "settings": {
        "heading": "Accordion heading"
      }
    }
  ]
}
{% endschema %}